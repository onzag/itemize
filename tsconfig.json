{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "rootDir": ".",
    "outDir": "nodejs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "jsx": "react"
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "data",
    "nodejs"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ]
}
